<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/gradientEndColor">

    <TextView
        android:id="@+id/each_event_comment_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="15dp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/each_event_comment_createdBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/each_event_comment_string"
        android:layout_marginTop="5dp"
        android:textSize="10dp"
        android:textColor="@color/colorPrimaryDark"/>

    <ImageButton
        android:id="@+id/event_comment_report_action_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/each_event_comment_string"
        android:layout_alignParentRight="true"
        android:background="@color/light_grey"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_report_problem_white_24dp"/>

</RelativeLayout>