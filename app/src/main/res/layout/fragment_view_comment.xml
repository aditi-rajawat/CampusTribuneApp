<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whiteborder">


<TextView
        android:id="@+id/commentContent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />

    <EditText
        android:id="@+id/commentContentEdit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="6pt"
        android:visibility="gone"
        ></EditText>

    <LinearLayout
        android:id="@+id/editCommentbuttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_below="@+id/commentContentEdit">

        <Button
            android:id="@+id/button_save_comment"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="6pt"
            android:textColor="#3399ff"
            style="?android:attr/borderlessButtonStyle" />

        <View
            android:layout_width="0.8dp"
            android:layout_height="1dp"
            android:layout_weight="0.02" >
        </View>

        <Button
            android:id="@+id/button_cancel_comment"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="6pt"
            android:text="Cancel"
            android:textColor="#3399ff"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentsbuttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/commentContentEdit">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_report_problem_white_24dp"
            android:id="@+id/reportComment"
            android:background="@null"
            android:paddingLeft="20dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="0.05" >
        </View>

        <Button
            android:id="@+id/comment_button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#3399ff"
            style="?android:attr/borderlessButtonStyle" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="0.05" >
        </View>

        <Button
            android:id="@+id/comment_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textColor="#3399ff"
            style="?android:attr/borderlessButtonStyle" />

    </LinearLayout>
</RelativeLayout>
